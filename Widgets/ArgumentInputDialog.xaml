<Window x:Class="MakefileReader.ArgumentInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Makefile Arguments" 
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#282a36">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Configure Makefile Arguments" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Foreground="#f8f8f2" 
                   Margin="0,0,0,10"/>

        <!-- Target Info -->
        <Border Grid.Row="1" 
                Background="#44475a" 
                CornerRadius="5" 
                Padding="15" 
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Target:" 
                           FontWeight="Bold" 
                           Foreground="#bd93f9" 
                           FontSize="12"/>
                <TextBlock Name="TargetNameText" 
                           Text="migrate_app" 
                           Foreground="#f8f8f2" 
                           FontSize="14" 
                           Margin="0,2,0,0"/>
            </StackPanel>
        </Border>

        <!-- Arguments List -->
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel Name="ArgumentsPanel" 
                        Margin="0,0,0,15">
                <!-- Dynamic argument inputs will be added here -->
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="3" 
                Background="#44475a" 
                CornerRadius="5" 
                Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Preview Command -->
                <TextBlock Grid.Column="0" 
                           Name="PreviewCommandText" 
                           Text="make migrate_app MIGRATE_NAME=my_migration" 
                           Foreground="#8be9fd" 
                           FontFamily="Consolas" 
                           FontSize="11" 
                           VerticalAlignment="Center" 
                           TextTrimming="CharacterEllipsis"/>

                <!-- Cancel Button -->
                <Button Grid.Column="1" 
                        Name="CancelButton" 
                        Content="Cancel" 
                        Padding="20,8" 
                        Margin="10,0,10,0"
                        Background="#6272a4" 
                        Foreground="#f8f8f2" 
                        BorderThickness="0"
                        Click="CancelButton_Click"/>

                <!-- Execute Button -->
                <Button Grid.Column="2" 
                        Name="ExecuteButton" 
                        Content="Execute" 
                        Padding="20,8"
                        Background="#50fa7b" 
                        Foreground="#282a36" 
                        BorderThickness="0"
                        FontWeight="Bold"
                        Click="ExecuteButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>