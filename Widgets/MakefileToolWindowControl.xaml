<UserControl x:Class="MakefileReader.MakefileToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:makefilereader="clr-namespace:MakefileReader" d:DataContext="{d:DesignInstance Type=makefilereader:MakefileToolWindowControl}"
             mc:Ignorable="d" 
             d:DesignHeight="441" d:DesignWidth="800"
             Background="#282a36">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header with file info and refresh button -->
        <Border Grid.Row="0" Background="#44475a" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                          Text="{Binding CurrentMakefilePath, StringFormat='Makefile: {0}'}" 
                          VerticalAlignment="Center"
                          FontWeight="Bold"
                          Foreground="#f8f8f2"/>
                
                <Button Grid.Column="1" 
                       Content="Refresh" 
                       Click="RefreshButton_Click"
                       Padding="10,5"
                       Background="#bd93f9" 
                       Foreground="#282a36"
                       BorderBrush="#50fa7b"/>
            </Grid>
        </Border>
        
        <!-- Content area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
            <StackPanel>
                <!-- Status message -->
                <TextBlock Name="StatusTextBlock" 
                          Text="No Makefile loaded. Open a Makefile using the Preview context menu or select a Makefile to analyze."
                          Margin="0,10"
                          FontStyle="Italic"
                          Foreground="#6272a4"
                          Visibility="{Binding ShowStatusMessage, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
                <!-- Makefile targets list -->
                <ItemsControl Name="TargetsItemsControl" ItemsSource="{Binding MakefileTargets}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#6272a4" 
                                   BorderThickness="1" 
                                   Margin="0,5" 
                                   Padding="10"
                                   Background="#44475a">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Target name with argument indicator -->
                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" 
                                                  FontWeight="Bold"
                                                  FontSize="14"
                                                  Foreground="#ff79c6"/>
                                        <TextBlock Text=" ⚙️" 
                                                  FontSize="12"
                                                  Foreground="#ffb86c"
                                                  Margin="5,0,0,0"
                                                  ToolTip="Requires arguments"
                                                  Visibility="{Binding HasVariables, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </StackPanel>
                                    
                                    <!-- Execute button -->
                                    <Button Grid.Row="0" Grid.Column="1"
                                           Click="ExecuteTarget_Click"
                                           Tag="{Binding}"
                                           Padding="15,5"
                                           Background="#50fa7b"
                                           Foreground="#282a36"
                                           BorderBrush="#8be9fd">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Execute"/>
                                                <TextBlock Text=" ⚙️" 
                                                          Margin="3,0,0,0"
                                                          Visibility="{Binding HasVariables, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                    
                                    <!-- Commands preview -->
                                    <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                              Text="{Binding Commands}" 
                                              FontFamily="Consolas"
                                              FontSize="11"
                                              Foreground="#8be9fd"
                                              TextWrapping="Wrap"
                                              Margin="0,5,0,0"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>